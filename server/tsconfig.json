{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
